    <script>
        // --- DADOS ---
        const iconPairs = [
            { c: {i: 'fa-sun', n: 'Sol'}, i: {i: 'fa-star', n: 'Estrela'} },
            { c: {i: 'fa-cloud-rain', n: 'Chuva'}, i: {i: 'fa-snowflake', n: 'Neve'} },
            { c: {i: 'fa-fire', n: 'Fogo'}, i: {i: 'fa-volcano', n: 'Vulcão'} },
            { c: {i: 'fa-tree', n: 'Árvore'}, i: {i: 'fa-leaf', n: 'Folha'} },
            { c: {i: 'fa-water', n: 'Água'}, i: {i: 'fa-droplet', n: 'Gota'} },
            { c: {i: 'fa-cat', n: 'Gato'}, i: {i: 'fa-dog', n: 'Cachorro'} },
            { c: {i: 'fa-car', n: 'Carro'}, i: {i: 'fa-bus', n: 'Ônibus'} },
            { c: {i: 'fa-burger', n: 'Hambúrguer'}, i: {i: 'fa-hotdog', n: 'Hotdog'} },
            { c: {i: 'fa-futbol', n: 'Futebol'}, i: {i: 'fa-basketball', n: 'Basquete'} },
            { c: {i: 'fa-mobile', n: 'Celular'}, i: {i: 'fa-tablet', n: 'Tablet'} },
            { c: {i: 'fa-mug-hot', n: 'Café'}, i: {i: 'fa-wine-glass', n: 'Vinho'} },
            { c: {i: 'fa-ghost', n: 'Fantasma'}, i: {i: 'fa-skull', n: 'Caveira'} },
            { c: {i: 'fa-gamepad', n: 'Videogame'}, i: {i: 'fa-dice', n: 'Dados'} },
            { c: {i: 'fa-book', n: 'Livro'}, i: {i: 'fa-newspaper', n: 'Jornal'} },
            { c: {i: 'fa-bicycle', n: 'Bicicleta'}, i: {i: 'fa-motorcycle', n: 'Moto'} },
            { c: {i: 'fa-plane', n: 'Avião'}, i: {i: 'fa-helicopter', n: 'Helicóptero'} }
        ];

        let state = {
            totalPlayers: 5,
            impostors: 1,
            detectives: 0,
            players: [],
            currentPlayerIndex: 0,
            usedPairs: []
        };

        // --- SETUP ---
        const totalPlayersInput = document.getElementById('totalPlayers');
        const chaosModeInput = document.getElementById('chaosMode');
        const hasDetectiveInput = document.getElementById('hasDetective');
        const manualControls = document.getElementById('manual-controls');

        totalPlayersInput.addEventListener('input', (e) => {
            state.totalPlayers = parseInt(e.target.value);
            document.getElementById('totalPlayersVal').innerText = state.totalPlayers;
            validateCounts();
        });

        chaosModeInput.addEventListener('change', (e) => {
            if(e.target.checked) {
                manualControls.style.opacity = '0.3';
                manualControls.style.pointerEvents = 'none';
            } else {
                manualControls.style.opacity = '1';
                manualControls.style.pointerEvents = 'all';
            }
        });

        function toggleDetectiveInput() {
            const controls = document.getElementById('detective-control');
            if(hasDetectiveInput.checked) {
                controls.style.display = 'block';
                state.detectives = 1;
            } else {
                controls.style.display = 'none';
                state.detectives = 0;
            }
            document.getElementById('detectivesVal').innerText = state.detectives;
            validateCounts();
        }

        function adjustCount(type, delta) {
            const maxSpecials = Math.floor(state.totalPlayers / 3);
            if (type === 'impostors') {
                let newVal = state.impostors + delta;
                if (newVal < 1) newVal = 1;
                if (newVal + state.detectives <= maxSpecials) state.impostors = newVal;
            } else if (type === 'detectives') {
                let newVal = state.detectives + delta;
                if (newVal < 0) newVal = 0;
                if (newVal + state.impostors <= maxSpecials) state.detectives = newVal;
            }
            document.getElementById('impostorsVal').innerText = state.impostors;
            document.getElementById('detectivesVal').innerText = state.detectives;
            validateCounts();
        }

        function validateCounts() {
            const maxSpecials = Math.floor(state.totalPlayers / 3);
            document.getElementById('rule-msg').innerText = `Máx. Especiais (Imp+Det): ${maxSpecials}`;
            
            if (!chaosModeInput.checked && (state.impostors + state.detectives > maxSpecials)) {
                state.detectives = 0;
                state.impostors = Math.max(1, maxSpecials);
                if(state.impostors > maxSpecials) state.impostors = 1;
                document.getElementById('impostorsVal').innerText = state.impostors;
                document.getElementById('detectivesVal').innerText = state.detectives;
            }
        }

        // --- LÓGICA DO JOGO ---
        function startGame() {
            const maxSpecials = Math.floor(state.totalPlayers / 3);
            let numImpostors = state.impostors;
            let numDetectives = state.detectives;

            if (chaosModeInput.checked) {
                const limit = Math.max(1, maxSpecials);
                numImpostors = Math.floor(Math.random() * limit) + 1;
                const remaining = limit - numImpostors;
                numDetectives = remaining > 0 ? Math.floor(Math.random() * (remaining + 1)) : 0;
            }

            let roles = [];
            for(let i=0; i<numImpostors; i++) roles.push('impostor');
            for(let i=0; i<numDetectives; i++) roles.push('detective');
            while(roles.length < state.totalPlayers) roles.push('civilian');

            // Embaralhar
            for (let i = roles.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [roles[i], roles[j]] = [roles[j], roles[i]];
            }

            // Ícone
            if (state.usedPairs.length >= iconPairs.length) state.usedPairs = [];
            let pairIndex;
            do { pairIndex = Math.floor(Math.random() * iconPairs.length); } 
            while (state.usedPairs.includes(pairIndex));
            state.usedPairs.push(pairIndex);
            const currentPair = iconPairs[pairIndex];
            
            const impostorKnows = document.getElementById('impostorKnows').checked;

            state.players = roles.map((role, idx) => {
                let data = { id: idx + 1, realRole: role };
                if (role === 'civilian') {
                    data.icon = currentPair.c.i;
                    data.itemName = currentPair.c.n;
                    data.displayRole = 'CIVIL';
                    data.color = 'civilian-color';
                    data.instruction = "Memorize a imagem e o objeto!";
                } else if (role === 'detective') {
                    data.icon = 'fa-magnifying-glass';
                    data.itemName = 'Sem imagem';
                    data.displayRole = 'DETETIVE';
                    data.color = 'detective-color';
                    data.instruction = "Você NÃO tem imagem. Descubra a dos outros!";
                } else if (role === 'impostor') {
                    data.icon = currentPair.i.i;
                    data.itemName = currentPair.i.n;
                    if (impostorKnows) {
                        data.displayRole = 'IMPOSTOR';
                        data.color = 'impostor-color';
                        data.instruction = "Você é o Impostor. Engane os outros!";
                    } else {
                        data.displayRole = 'CIVIL'; // Mentira visual
                        data.color = 'civilian-color';
                        data.instruction = "Memorize a imagem e o objeto!";
                    }
                }
                return data;
            });

            state.currentPlayerIndex = 0;
            switchScreen('screen-game');
            updateGameScreen();
            
            // Limpa histórico visual anterior
            document.getElementById('history-box').style.display = 'none';
            document.getElementById('history-box').innerHTML = '';
        }

        function updateGameScreen() {
            const pIndex = state.currentPlayerIndex + 1;
            document.getElementById('round-indicator').innerText = `Jogador ${pIndex} de ${state.totalPlayers}`;
            document.getElementById('current-player-name').innerText = `Jogador ${pIndex}`;
            document.getElementById('view-hidden').style.display = 'flex';
            document.getElementById('view-revealed').style.display = 'none';
        }

        // Função Genérica para mostrar a carta (usada no jogo e no modal)
        function renderCardData(player, prefix="") {
            // Se prefix for vazio, busca IDs: role-icon, role-name, item-name
            // Se prefix for 'review-', busca IDs: review-role-icon, review-role-name, review-item-name
            
            const icon = document.getElementById(prefix + 'role-icon');
            const name = document.getElementById(prefix + 'role-name');
            const item = document.getElementById(prefix + 'item-name');
            const instr = document.getElementById('memory-instruction'); // Só existe na tela principal

            icon.className = 'icon-display fa-solid ' + player.icon;
            icon.style.color = (player.displayRole === 'IMPOSTOR') ? 'var(--secondary)' : 
                               (player.realRole === 'detective' ? '#FFA500' : 'var(--accent)');
            
            name.innerText = player.displayRole;
            name.className = 'role-text ' + player.color;
            item.innerText = player.itemName;

            if(instr) instr.innerText = player.instruction;
        }

        function revealCard() {
            const player = state.players[state.currentPlayerIndex];
            renderCardData(player); // Prefixo vazio
            document.getElementById('view-hidden').style.display = 'none';
            document.getElementById('view-revealed').style.display = 'flex';
        }

        function hideCard() {
            state.currentPlayerIndex++;
            if (state.currentPlayerIndex >= state.totalPlayers) {
                switchScreen('screen-result');
            } else {
                updateGameScreen();
            }
        }

        // --- RESULTADO / ESPIAR ---
        function switchScreen(id) {
            document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
            document.getElementById(id).classList.add('active');
        }

        function returnToMenu() {
            switchScreen('screen-setup');
        }

        // Feature 4: Prova Real (Histórico corrigido para Português)
        function toggleHistory() {
            const box = document.getElementById('history-box');
            if (box.style.display === 'block') {
                box.style.display = 'none';
                return;
            }
            
            const roleTranslations = {
                'civilian': 'CIVIL',
                'impostor': 'IMPOSTOR',
                'detective': 'DETETIVE'
            };

            let html = '<h4 style="margin-bottom:10px; color:var(--accent)">Revelação de Identidade:</h4>';
            state.players.forEach(p => {
                let roleLabel = roleTranslations[p.realRole] || p.realRole;
                let color = '#fff';
                if(p.realRole === 'impostor') color = 'var(--secondary)';
                if(p.realRole === 'detective') color = '#FFA500';
                
                html += `
                <div class="history-row">
                    <span><strong>J${p.id}</strong>: <span style="color:${color}">${roleLabel}</span></span>
                    <span><i class="fa-solid ${p.icon}"></i> ${p.itemName}</span>
                </div>`;
            });
            
            box.innerHTML = html;
            box.style.display = 'block';
        }

        // Feature 5: Espiar (Modal Corrigido)
        function openReviewModal() {
            const grid = document.getElementById('review-grid');
            grid.innerHTML = '';
            document.getElementById('review-card').style.display = 'none';
            grid.style.display = 'grid';

            state.players.forEach((p, idx) => {
                const btn = document.createElement('button');
                btn.className = 'player-btn';
                btn.innerText = `J${p.id}`;
                btn.onclick = () => showReviewCard(idx);
                grid.appendChild(btn);
            });

            document.getElementById('review-modal').style.display = 'flex';
        }

        function showReviewCard(idx) {
            const player = state.players[idx];
            document.getElementById('review-grid').style.display = 'none';
            
            // Aqui enviamos o prefixo 'review-' para preencher os IDs do Modal
            renderCardData(player, 'review-'); 
            
            document.getElementById('review-card').style.display = 'flex';
        }

        function closeReviewModal() {
            document.getElementById('review-modal').style.display = 'none';
            document.getElementById('review-card').style.display = 'none';
            document.getElementById('review-grid').style.display = 'grid';
        }

        validateCounts();
    </script>
</body>
</html>
