                        <div style="display:flex; align-items:center; gap:10px;">
                            <button class="btn-counter" onclick="adjustCount('impostors', -1)">-</button>
                            <span id="impostorsVal" style="font-weight:bold;">1</span>
                            <button class="btn-counter" onclick="adjustCount('impostors', 1)">+</button>
                        </div>
                    </div>
                    
                    <div class="sub-control">
                        <div class="switch-container">
                            <label style="font-size:0.8rem; opacity:0.8;">Sabe que é Impostor?</label>
                            <label class="switch" style="transform: scale(0.8);">
                                <input type="checkbox" id="impostorKnows" checked>
                                <span class="slider"></span>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="control-group">
                    <div class="switch-container">
                        <label style="color:var(--accent);">Habilitar Detetive</label>
                        <label class="switch">
                            <input type="checkbox" id="hasDetective" onchange="toggleDetectiveInput()">
                            <span class="slider"></span>
                        </label>
                    </div>

                    <div id="detective-control" style="display:none; margin-top:10px;">
                        <div class="counter-input">
                            <span>Quantidade:</span>
                            <div style="display:flex; align-items:center; gap:10px;">
                                <button class="btn-counter" onclick="adjustCount('detectives', -1)">-</button>
                                <span id="detectivesVal" style="font-weight:bold;">0</span>
                                <button class="btn-counter" onclick="adjustCount('detectives', 1)">+</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <button class="btn-main btn-start" onclick="startGame()">INICIAR JOGO</button>
